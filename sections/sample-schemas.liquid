			"min": 12,
			"max": 24,
			"step": 1,
			"default": 12,
			"unit": "px"
		},
		{
			"type": "select",
			"id": "select",
			"label": "Select",
			"options": [
				{
					"value": "top",
					"label": "Top"
				},
				{
					"value": "middle",
					"label": "Middle"
				},
				{
					"value": "bottom",
					"label": "Bottom"
				}
			]
		},
		{
			"type": "header",
			"content": "Object references"
		},
		{
			"type": "collection",
			"id": "collection",
			"label": "Collection"
		},
		{
			"type": "collection_list",
			"id": "collection_list",
			"label": "Collection List",
			"limit": 8,
			"info": "Multi collection select"
		},
		{
			"type": "product",
			"id": "product",
			"label": "Product"
		},
		{
			"type": "product_list",
			"id": "product_list",
			"label": "Products List",
			"limit": 12,
			"info": "Multi product select"
		},
		{
			"type": "article",
			"id": "article",
			"label": "Article"
		},
		{
			"type": "blog",
			"id": "blog",
			"label": "Blog"
		},
		{
			"type": "page",
			"id": "page",
			"label": "Page"
		},
		{
			"type": "link_list",
			"id": "menu",
			"label": "Menu"
		}
	],
	"blocks": [
		{
			"type": "block",
			"name": "Block",
			"settings": [
				{
					"type": "text",
					"id": "id",
					"label": "Label"
				}
			]
		}
	]
