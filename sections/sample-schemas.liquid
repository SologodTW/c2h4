		{
			"category": "Content",
			"name": "Sample section"
		}
	],
	"settings": [
		{
			"type": "text",
			"id": "text",
			"label": "Text"
		},
		{
			"type": "textarea",
			"id": "textarea",
			"label": "Textarea"
		},
		{
			"type": "richtext",
			"id": "richtext",
			"label": "Richtext"
		},
		{
			"type": "number",
			"id": "number",
			"label": "Number"
