		{
			"type": "color_background",
			"id": "color_background",
			"label": "Color Background"
		},
		{
			"type": "font_picker",
			"id": "font",
			"label": "Font",
			"default": "helvetica_n4"
		},
		{
			"type": "html",
			"id": "html",
			"label": "HTML"
		},
		{
			"type": "header",
			"content": "Predefined inputs"
		},
		{
			"type": "checkbox",
			"id": "checkbox",
			"label": "Checkbox"
		},
		{
			"type": "radio",
			"id": "radio",
			"label": "Radio",
			"options": [
				{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "centered",
					"label": "Centered"
				},
				{
					"value": "right",
					"label": "Right"
				}
			]
		},
		{
			"type": "range",
			"id": "range",
