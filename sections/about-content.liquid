{% schema %}
{
	"name": "About Content",
	"tag": "section",
	"class": "about-content p-x-max",
	"settings": [
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "About"
		},
		{
			"type": "richtext",
			"id": "content",
			"label": "Content"
		},
	]
}
{% endschema %}

{%- liquid
	assign image = section.settings.image
	assign content = section.settings.content
	assign title = section.settings.title
-%}

{%- if image != null -%}
	<div class="about-content__image bg-subtle">
		{%- render 'c-img-srcset',
			image: image,
			alt: image.alt
		-%}
	</div>
{%- endif -%}

<div class="about-content__inner f-h f-j-s">
	{%- if title != blank -%}
		<h1 class="about-content__title t-l-2 t-bold">{{ title }}</h1>
	{%- endif -%}

	{%- if content != blank -%}
		<div class="about-content__paragraph wysiwyg">{{ content }}</div>
	{%- endif -%}
</div>

